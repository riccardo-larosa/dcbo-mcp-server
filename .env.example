# Server Configuration
SERVER_PUBLIC_URL=https://mcp.docebosaas.com
PORT=3000

# Allowed Origins (comma-separated, or * for all)
ALLOWED_ORIGINS=*

# Local Development Mode (set to "true" to disable origin checking for MCP Inspector)
# WARNING: Never enable this in production!
ALLOW_LOCAL_DEV=false

# Tenant Credentials
# Format: TENANT_{UPPERCASE_TENANT}_CLIENT_ID, CLIENT_SECRET, and optional REDIRECT_URI
# Example for tenant "riccardo-lr-test":
TENANT_RICCARDO_LR_TEST_CLIENT_ID=your_oauth_client_id
TENANT_RICCARDO_LR_TEST_CLIENT_SECRET=your_oauth_client_secret
TENANT_RICCARDO_LR_TEST_REDIRECT_URI=https://mcp.docebosaas.com/oauth/callback

# Example for tenant "acme-corp":
# TENANT_ACME_CORP_CLIENT_ID=acme_client_id
# TENANT_ACME_CORP_CLIENT_SECRET=acme_client_secret
# TENANT_ACME_CORP_REDIRECT_URI=https://mcp.docebosaas.com/oauth/callback
